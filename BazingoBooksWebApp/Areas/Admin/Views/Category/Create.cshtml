@model Category

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-info">Create Category</h2>
			<hr />
		</div>
		@*Commented out because our inline validations are sufficient, but may want to use again the in future.*@
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-warning"></span>
		</div>
		<div class="mb-3">
			<label asp-for="DisplayOrder"></label>
			<input asp-for="DisplayOrder" class="form-control" />
			<span asp-validation-for="DisplayOrder" class="text-warning"></span>
		</div>
		<button type="submit" class="btn btn-success" style="width:150px">Create</button>
		<a asp-controller="Category" asp-action="Index" class="btn btn-info" style="width:150px">
			Back to List
		</a>
	</div>
</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}

