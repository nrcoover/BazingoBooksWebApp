@model CoverType

<form method="post" asp-action="Delete">
	<input asp-for="Id" hidden></input>
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-info">Delete Cover Type</h2>
			<hr />
		</div>
		@*Commented out because our inline validations are sufficient, but may want to use again the in future.*@
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" disabled class="form-control" />
		</div>
		<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
		<a asp-controller="CoverType" asp-action="Index" class="btn btn-info" style="width:150px">
			Back to List
		</a>
	</div>
</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}

